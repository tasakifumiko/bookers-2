<%= render 'users/userlist', user: @user, book: @booknew %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  
     
  	      <table class="table">
  	        <tbody>
  	          <tr>
  	            <td>
  	              <%= link_to image_tag(@user.get_profile_image(100,100), { alt: "User Profile Image" }), user_path(@user.id) %>
  	              <br>
  	              <%= link_to @user.name, user_path(@user.id) %>
  	            </td>
  	            <td>
  	              <%= link_to @book.title, book_path(@user.id)%>
  	            </td>
  	            <td><%= @book.body %></td>
  	            <td>
  	              <% if @book.user_id == current_user.id %>
                    <td><%= link_to edit_book_path, class: 'btn btn-sm btn-success' do %>
                    　　Edit
                    　　<% end %>
                    </td>
                    <td><%= link_to book_path, method: :delete, data: { confirm: '本当に消しますか?' }, class: 'btn btn-sm btn-danger' do %>
                    　　Destroy
                    　　<% end %>
                    </td>
                  <% end %>
              </tr>
            </tbody>
          </table>
    </div>
   </div>
  </div>
</main>