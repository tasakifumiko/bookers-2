<h1>Book detail</h1>
<table>
    <%= image_tag @user.get_profile_image(100,100) %>
     <thead>
      <tr> 
        <th></th>
        <th>Title</th>
        <th><%= @book.title %></th>
        <th>Opinion</th>
        <th><%= @book.body %></th>
        <% if @book.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
          <td><%= link_to 'Destroy', books_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
     </thead>
     <tbody></tbody>
    </table>
  </div>


  
<%= flash[:complete] %> 
<%= notice %>
<% if @book.errors.any? %>
   <%= @book.errors.count %>

     <% @book.errors.full_messages.each do |message| %> errors prohibited this book from being saved:
       <li><%= message %></li>
     <% end %>

<% end %>
