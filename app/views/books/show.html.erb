<%= render 'users/userlist', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  
      <% if @book.user_id = current_user.id %>
  	      <table class="table">
  	        <tbody>
  	          <tr>
  	            <td>
  	              <%= link_to image_tag(@user.get_profile_image(100,100), { alt: "User Profile Image" }), book_path(@book.id) %>
  	              <br>
  	              <%= link_to @user.name, book_path(@book.id) %>
  	            </td>
  	            <td>
  	              <%= link_to @book.title, book_path(@user.id)%>
  	            </td>
  	            <td><%= @book.body %></td>
  	            <td>
  	              <% if @book.user_id = current_user.id %>
                    <td><%= link_to edit_book_path(@book.id), class: 'btn btn-sm btn-success' do %>
                    　　Edit
                    　　<% end %>
                    </td>
                    <td><%= link_to books_path, method: :delete, data: { confirm: '本当に消しますか?' }, class: 'btn btn-sm btn-danger' do %>
                    　　Destroy
                    　　<% end %>
                    </td>
                  <% end %>
              </tr>
            </tbody>
          </table>
      <% else %>
          <table class="table table-hover table-inverse">
           <thead>
            <tr> 
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
           </thead>
           <tbody>
             <tr>
               <td>
                 <%= link_to image_tag(@user.get_profile_image(100,100), { alt: "User Profile Image" }), book_path(@book.id) %>
  	              <br>
               </td>
               <td>
  	              <%= link_to @book.title, book_path(@user.id)%>
  	            </td>
  	            <td><%= @book.body %></td>
  	            <td>
             </tr>
           </tbody>
     <% end %>         
 
    <%= flash[:complete] %> 
    <%= notice %>
    <% if @book.errors.any? %>
       <%= @book.errors.count %>
        <% @book.errors.full_messages.each do |message| %> errors prohibited this book from being saved:
         <li><%= message %></li>
        <% end %>
    <% end %>
    </div>
   </div>
  </div>
</main>