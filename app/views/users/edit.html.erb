<main>
 <p id="notice"><%= notice %></p>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, local: true do |f| %>
      <% if @user.errors.any? %>
       <div class="alart">
        <ul>
         <% @user.errors.full_messages.each do |message| %> 1 error prohibited this obj from being saved:
          <li><%= message %></li>
         <% end %>
        </ul>
       </div>
      <% end %>
    
    <div class="form-group">
       <label for="inputName">Name</label>
       <%= f.text_field :name, autofocus: true, id: "inputName", class: 'form-control name' %>
    </div>
    </div>
    <div class="form-group">
      <label for="inputImage">ProfileImage</label>
       <%= f.file_field :image, accept: "image/*", class: 'form-control-file user_image' %>
    </div>
    <div class="form-group">
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" ,class: 'form-control introduction' do %>
      <% end %>
    </div>
    <div class = "action">
      <%= link_to "Update User", book_path(@user.id), class: 'btn btn-secondary' %>
      
     <% end %>
    </div>
   </div>
   </div>
  </div>
 </div>
</main>

 
 
 
