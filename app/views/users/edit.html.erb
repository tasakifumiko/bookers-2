<main>
 <p id="notice"><%= notice %></p>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user do |f| %>
      <% if @user.errors.any? %>
       <%= @user.errors.count %>
       <% @user.errors.full_messages.each do |message| %> 1 error prohibited this obj from being saved:
       <li><%= message %></li>
      <% end %>
    <% end %>
    
    
    
    <div class="form-group">
           <label for="title">Title</label>
           <%= f.text_field:title, class: 'form-control book_title' do %>
           <% end %>
         </div>
         <div class="form-group">
           <label for="book_opinion">Opinion</label>
           <%= f.text_area:body, class: 'form-control book_body' do %>
           <% end %>
         </div>
         <div class = "action">
         <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
         </div>
         <% end %> 
      </div>
    
   </div>
  </div>
 </div>
</main>


  


 <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :Image, accept: "image/*" %> 
  <label for="imputBody">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
  <%= f.submit "Update User" %>
<% end %>



 
 
 
