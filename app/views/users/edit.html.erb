<main>
  <p id="notice"><%= notice %></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <% if @user.errors.any? %>
          <div class="alert">
            <%= @user.errors.count %> errors prohibited this obj from being saved:
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model: @user, local: true, url: user_path(@user.id), method: :patch do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id: "inputName", class: 'form-control name' %>
          </div>
          <div class="form-group">
            <label for="inputImage">ProfileImage</label>
            <%= f.file_field :image, accept: "image/*", class: 'form-control-file user_image' %>
          </div>
          <div class="form-group">
            <label for="inputIntroduction">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" ,class: 'form-control introduction' %>
          </div>
          <div class = "action">
            <%= f.submit "Update User", class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>





