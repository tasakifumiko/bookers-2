    <h2>New book</h2>
    <% if @book.errors.any? %>
    <%= @book.errors.count %>

     <% @book.errors.full_messages.each do |message| %> errors prohibited this book from being saved:
       <li><%= message %></li>
     <% end %>
    <% end %>
    
     <%= form_with model: @book, local:true do |f|%>
      <label for = "title">Title</label>
      <div class = "form">
        <%= f.text_field:title %>
      </div>
      <label for = "body">Opinion</label>
      <div class = "form">
        <%= f.text_area:body %>
      </div>
      <div class = "action">
        <%= f.submit "Create Book" %>
      </div>
     <% end %>

  
  
